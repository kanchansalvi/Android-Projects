<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc89f2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ideaHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ideaHeader"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/ideaTitle"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:hint="@string/titleHint"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ideaHeader"
        android:inputType="text"
        android:layout_marginTop="25dp"
        android:background="#f2d9f4"
        />

    <EditText
        android:id="@+id/ideaDescription"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:hint="@string/descHint"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ideaTitle"
        android:layout_marginTop="15dp"
        android:background="#f2d9f4"
        android:gravity="start"
        android:textAlignment="textStart"
        android:inputType="text"
        />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ideaDescription"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#a751c9"
        android:text="@string/saveBtn"
        android:textStyle="bold"/>
</RelativeLayout>