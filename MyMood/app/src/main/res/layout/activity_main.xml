<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_bg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:padding="20dp"
        android:text="@string/moodscanner"
        android:textColor="#fabfab"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textExplain"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:text="@string/text_explain"
        android:textColor="#afffff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/moodscanner"
        android:src="@drawable/image_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textExplain"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/thumbPrint"
        android:src="@drawable/finger_bg"
        android:layout_below="@id/textExplain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/moodscanner"
        android:text="Your mood is "
        android:textColor="#beff"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resultTitle"
        android:text="Hello"
        android:textColor="#beff"
        android:textSize="18sp"
        android:textStyle="normal" />
</RelativeLayout>